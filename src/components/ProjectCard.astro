---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  projectLink?: string;
}

const { title, description, imageUrl, projectLink } = Astro.props;
---

<div class="project-card">
  <div class="card-image-wrapper">
    <img src={imageUrl} alt={`Imagen del proyecto ${title}`} class="card-image" />
    <div class="card-overlay"></div>
  </div>
  <div class="card-content">
    <h3>{title}</h3>
    <p>{description}</p>
    {projectLink && (
      <a href={projectLink} target="_blank" rel="noopener noreferrer" class="project-link">Ver Proyecto</a>
    )}
  </div>
</div>

<style>
  .project-card {
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%; /* Asegura que las tarjetas tengan la misma altura si están en un grid */
  }

  .card-image-wrapper {
    position: relative;
    width: 100%;
    height: 200px; /* Altura fija para la imagen */
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Recorta la imagen para que cubra el espacio */
    display: block;
    transition: transform 0.3s ease;
  }

  .project-card:hover .card-image {
    transform: scale(1.20); /* Efecto zoom al pasar el ratón */
  }

  .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0)); /* Sutil gradiente oscuro */
    z-index: 1;
  }

  .card-content {
    padding: 20px;
    flex-grow: 1; /* Permite que el contenido se expanda */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .card-content h3 {
    margin-top: 0;
    margin-bottom: 10px;
    color: #333;
  }

  .card-content p {
    font-size: 0.95em;
    line-height: 1.5;
    color: #555;
    flex-grow: 1; /* Permite que el párrafo ocupe el espacio disponible */
  }

  .project-link {
    display: inline-block;
    background-color: #007bff;
    color: white;
    padding: 8px 15px;
    border-radius: 5px;
    text-align: center;
    margin-top: 15px;
    transition: background-color 0.3s ease;
  }

  .project-link:hover {
    background-color: #0056b3;
    text-decoration: none;
  }
</style>
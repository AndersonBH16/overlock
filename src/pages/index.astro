const enterpriseprojects = [
  {
    title: 'Softonic: Desarrollo y mantenimiento de sistemas empresariales',
    description: 'Desarrollo y mantenimiento de los sistemas de la empresa internacional Softonic. Desarrollo de features nuevos y mantenimiento de los diversos sistemas optimizando los scripts y uso de comandos bash para mejora de procesos empresariales',
